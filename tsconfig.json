{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2022",
    "lib": [
      "es2020"
    ],
    "target": "es2019",
    "verbatimModuleSyntax": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": false,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "astro/env"
    ],
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src/types/astro.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".vscode",
    "dist"
  ]
}
